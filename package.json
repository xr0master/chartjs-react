{
  "name": "chartjs-react",
  "version": "3.3.2",
  "description": "TypeScript React wrapper for Chart.js with hooks and tooltip",
  "private": false,
  "author": "Sergey Khomushin <xr0master@gmail.com>",
  "license": "MIT",
  "main": "es/ReactChart.js",
  "types": "es/ReactChart.d.ts",
  "keywords": [
    "chartjs react",
    "chartjs hooks",
    "chartjs react typescript",
    "chartjs tooltip"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/xr0master/chartjs-react.git"
  },
  "scripts": {
    "_build-ts": "tsc",
    "_clean": "rm -rf ./es",
    "_eslint": "eslint 'src/**/*.{ts,tsx}'",
    "build": "npm run _clean && npm run _eslint && npm run _build-ts",
    "test": "jest --notify --forceExit --coverage --verbose --config ./jest.conf.json",
    "lint": "tsc --noEmit && npm run _eslint"
  },
  "peerDependencies": {
    "chart.js": ">=3.2.0",
    "react": ">=16.8.0"
  },
  "devDependencies": {
    "@types/jest": "27.0.2",
    "@types/node": "16.11.6",
    "@types/react": "17.0.33",
    "@typescript-eslint/eslint-plugin": "5.2.0",
    "@typescript-eslint/parser": "5.2.0",
    "chart.js": "3.6.0",
    "eslint": "8.1.0",
    "eslint-plugin-react": "7.26.1",
    "jest": "27.3.1",
    "prettier": "2.4.1",
    "react": "17.0.2",
    "ts-jest": "27.0.7",
    "typescript": "4.4.4"
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true
  },
  "bugs": {
    "url": "https://github.com/xr0master/chartjs-react/issues"
  },
  "homepage": "https://github.com/xr0master/chartjs-react#readme"
}
