{
  "name": "chartjs-react",
  "version": "3.5.0",
  "description": "TypeScript React wrapper for Chart.js with hooks and tooltip",
  "private": false,
  "author": "Sergey Khomushin <xr0master@gmail.com>",
  "license": "MIT",
  "main": "es/ReactChart.js",
  "types": "es/ReactChart.d.ts",
  "keywords": [
    "chartjs react",
    "chartjs hooks",
    "chartjs react typescript",
    "chartjs tooltip"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/xr0master/chartjs-react.git"
  },
  "scripts": {
    "_build-ts": "tsc",
    "_clean": "rm -rf ./es",
    "_eslint": "eslint 'src/**/*.{ts,tsx}'",
    "build": "npm run _clean && npm run _eslint && npm run _build-ts",
    "test": "jest --notify --forceExit --coverage --verbose --config ./jest.conf.json",
    "lint": "tsc --noEmit && npm run _eslint"
  },
  "peerDependencies": {
    "chart.js": ">=3.9.0",
    "react": ">=16.8.0"
  },
  "devDependencies": {
    "@types/jest": "^28.1.8",
    "@types/node": "^18.7.13",
    "@types/react": "^18.0.17",
    "@typescript-eslint/eslint-plugin": "^5.35.1",
    "@typescript-eslint/parser": "^5.35.1",
    "chart.js": "^3.9.1",
    "eslint": "^8.23.0",
    "eslint-plugin-react": "^7.31.1",
    "jest": "^28.1.3",
    "prettier": "^2.7.1",
    "react": "^18.2.0",
    "ts-jest": "^28.0.8",
    "typescript": "^4.8.2"
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true
  },
  "bugs": {
    "url": "https://github.com/xr0master/chartjs-react/issues"
  },
  "homepage": "https://github.com/xr0master/chartjs-react#readme"
}
