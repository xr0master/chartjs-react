    "@typescript-eslint/eslint-plugin": "^5.48.1",
    "@typescript-eslint/parser": "^5.48.1",
    "chart.js": "^4.1.2",
    "eslint": "^8.31.0",
    "eslint-plugin-react": "^7.31.11",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "prettier": "^2.8.2",
    "react": "^18.2.0",
    "ts-jest": "^29.0.3",
